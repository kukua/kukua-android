<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:rsb="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg"
                android:orientation="vertical">

            <TextView
                android:id="@+id/who"
                style="@style/TextStyle.Title"
                android:text="Who are you viewing the  weather for?"/>

            <ExpandableListView
                android:choiceMode = "singleChoice"
                android:background="@drawable/round_rect"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_below="@+id/who"
                android:id="@+id/expandableListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="5dp"
                android:divider="@color/backgroundColor"
                android:layout_above="@+id/btn_dont_specify"
                android:groupIndicator="@color/backgroundColor"
                android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"/>

    <Button
        android:id="@+id/btn_dont_specify"
        style="@style/ButtonStyle.Button.Medium"
        android:text="Don't Specify"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_above="@+id/btn_next3"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_next3"
        style="@style/ButtonStyle.Button.Large"
        android:layout_marginBottom="10dp"
        android:text="Next"
        />


</RelativeLayout>