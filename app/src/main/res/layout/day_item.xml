<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <LinearLayout
        android:id="@+id/llAppUseCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:weightSum="8"
            android:id="@+id/menu_date"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="2"
                android:background="@drawable/left_white_round_rect"
                android:layout_width="2dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:background="@drawable/left_blue_now_round_rect"
                    android:textColor="@color/colorWhite"
                    android:text="now"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    style="@style/TextStyle.Hour.Title"
                    />
                <TextView
                    android:textColor="@color/colorAccent"
                    android:text="9"
                    android:textSize="30sp"
                    style="@style/TextStyle.Hour.Title"
                    />
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    />
                <TextView
                    android:textColor="@color/colorAccent"
                    android:text="AM"
                    android:layout_marginTop="1dp"
                    android:textSize="20sp"
                    style="@style/TextStyle.Hour.Title"
                    />

            </LinearLayout>
            <ImageView
                android:layout_weight="0.2"
                android:background="@color/colorPrimary"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/right_blue_round_rect"
                android:layout_weight="6"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:weightSum="5">
                <LinearLayout
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="@color/colorWhite"
                        android:text="SUNNY"
                        android:layout_marginTop="1dp"
                        android:textSize="20sp"
                        style="@style/TextStyle.Hour.Title"
                        />
                    <ImageView
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"/>
                    <ImageView
                        android:src="@drawable/day_hour_cloudy_icon"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_weight="0.2"
                    android:background="@color/colorPrimary"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="1.9"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_height="50dp"
                        style="@style/TextStyle.Home.Temperature"
                        android:layout_width="142dp">
                        <TextView
                            android:background="@color/backgroundColor"
                            android:id="@+id/menu_temperature_text"
                            android:text="27"
                            android:textSize="30sp"
                            style="@style/TextStyle.Home.Temperature"
                            android:layout_alignParentTop="true"
                            android:layout_alignEnd="@+id/textView3"
                            android:layout_alignParentStart="true"/>
                        <TextView
                            android:text="o"
                            android:textSize="15dp"
                            android:textColor="@color/colorWhite"
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:id="@+id/textView2"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:text="C"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="@color/colorWhite"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3"
                            android:layout_alignBaseline="@+id/menu_temperature_text"
                            android:layout_alignBottom="@+id/menu_temperature_text"
                            android:layout_alignStart="@+id/textView2"/>
                    </RelativeLayout>
                    <ImageView
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"/>
                    <TextView
                        android:textColor="@color/colorWhite"
                        android:text="15% RAIN"
                        android:layout_marginTop="1dp"
                        android:textSize="20sp"
                        style="@style/TextStyle.Hour.Title"
                        android:layout_width="150dp"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>