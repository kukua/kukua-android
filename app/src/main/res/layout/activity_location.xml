<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="cc.kukua.android.activity.firstime.LocationFragment" >

<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.Green.AppBarOverlay">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.Green.PopupOverlay" >

    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Choose a location for accurate wheather"/>
        <Button
            android:id="@+id/btn_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/material_green_600"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:text="choose location"/>
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
    </LinearLayout>
<Button
    android:id="@+id/btn_next"
    android:background="@color/colorPrimary"
    android:textColor="@color/colorWhite"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center|bottom"
    android:layout_marginRight="@dimen/button_spacing"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/button_spacing"
    android:text="Next"/>


</android.support.design.widget.CoordinatorLayout>

