<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Attributes for all APIs -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="dialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
        <item name="colorControlHighlight">@color/selector_black_pressed</item>
    </style>

    <!-- Default App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- API specific attributes 14+ -->
        <item name="selectableRectDrawable">@drawable/state_list_selectable_rect_blue</item>
        <item name="selectableRectDrawableInverse">@drawable/state_list_selectable_rect_white</item>
        <item name="selectableRectDrawableColored">@drawable/state_list_selectable_rect_blue</item>
        <item name="selectableRoundedRectDrawable">@drawable/state_list_selectable_rounded_rect_blue</item>
        <item name="selectableRoundedRectDrawableInverse">
            @drawable/state_list_selectable_rounded_rect_white
        </item>
        <item name="selectableRoundedRectDrawableColored">@drawable/state_list_selectable_rounded_rect_blue</item>
    </style>

    <!-- Blue App Theme -->
    <style name="BaseTheme.Blue" parent="AppTheme">
        <!-- Attributes for all APIs -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="dialogTheme">@style/AppTheme.Dialog.Blue</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Blue</item>
    </style>

    <style name="AppTheme.Blue" parent="BaseTheme.Blue">
        <!-- API specific attributes 14+ -->
        <item name="selectableRectDrawableColored">@drawable/state_list_selectable_rect_blue</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/state_list_selectable_rounded_rect_blue</item>
        <item name="android:colorForeground">@android:color/white</item>
    </style>

    <!-- Default Dialog Theme -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog"></style>

    <!-- Blue Dialog Theme -->
    <style name="AppTheme.Dialog.Blue">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Default Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert"></style>

    <!-- Blue Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Blue">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Action Bar Theme -->
    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:windowContentTransitions" tools:targetApi="21">true</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-light</item>
    </style>

    <style name="AppTheme.TransparentStausBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Light App Bar Theme -->
    <style name="AppTheme.AppBar.Light" parent="ThemeOverlay.AppCompat.ActionBar"></style>

    <!-- Dark App Bar Theme -->
    <style name="AppTheme.AppBar.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>


    <!-- Light Overlay Theme -->
    <style name="AppTheme.Overlay.Light" parent="ThemeOverlay.AppCompat.Light"></style>

    <!-- Dark Overlay Theme -->
    <style name="AppTheme.Overlay.Dark" parent="ThemeOverlay.AppCompat.Dark"></style>


    <!-- Button Styles -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button"></style>

    <style name="ButtonStyle.NoRaise">
        <!-- Pre API 21 has no raise effect by default -->
    </style>

    <style name="ButtonStyle.Button.Back" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_back</item>
    </style>
    <style name="ButtonStyle.Button.Large" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:background">@drawable/btn_bg_large</item>
        <item name="android:layout_height">@dimen/button_large_height</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/button_large_text</item>
    </style>
    <style name="ButtonStyle.Button.Medium" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_bg_medium</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_height">@dimen/button_medium_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/button_medium_text</item>
    </style>
    <style name="ButtonStyle.Button.Options" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_options</item>
    </style>
    <style name="ButtonStyle.Button.Settings.Small" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_settings_small</item>
    </style>
    <!--<style name="ButtonStyle.Colored.NoRaise">-->
        <!--&lt;!&ndash; Pre API 21 has no raise effect by default &ndash;&gt;-->
    <!--</style>-->

    <style name="ButtonStyle.Borderless" parent="Widget.AppCompat.Button.Borderless"></style>

    <style name="ButtonStyle.Borderless.ColoredText" parent="Widget.AppCompat.Button.Borderless.Colored"></style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton"></style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton"></style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox"></style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch"></style>

    <!-- Selectable Item Styles -->
    <style name="SelectableItemStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SelectableItemStyle.Rect">
        <item name="android:background">?selectableRectDrawable</item>
    </style>

    <style name="SelectableItemStyle.Rect.Colored">
        <item name="android:background">?selectableRectDrawableColored</item>
    </style>

    <style name="SelectableItemStyle.Rect.Inverse">
        <item name="android:background">?selectableRectDrawableInverse</item>
    </style>

    <style name="SelectableItemStyle.RoundedRect">
        <item name="android:background">?selectableRoundedRectDrawable</item>
    </style>

    <style name="SelectableItemStyle.RoundedRect.Colored">
        <item name="android:background">?selectableRoundedRectDrawableColored</item>
    </style>

    <style name="SelectableItemStyle.RoundedRect.Inverse">
        <item name="android:background">?selectableRoundedRectDrawableInverse</item>
    </style>

    <!-- Text Styles -->
    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="TextStyle.Center" parent="TextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TextStyle.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="TextStyle.Home.Navigation" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextStyle.Hour.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextStyle.Home.Calendar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextStyle.Home.Temperature" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextStyle.Home.WeatherDetails" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">70dp</item>
        <item name="android:layout_marginLeft">70dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextStyle.ChoosenCategory" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/category_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="TextStyle.Body1" parent="TextAppearance.AppCompat.Body1"></style>

    <style name="TextStyle.Body2" parent="TextAppearance.AppCompat.Body2"></style>

    <!-- Edit Text Styles -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:background">@drawable/input_field</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
    </style>
    <style name="EditLocationTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/gps_searchbar</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="EditTextStyleLarge" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:layout_height">160dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout"></style>

    <!-- Spinner Styles -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner"></style>

    <style name="SpinnerStyle.Underlined" parent="Widget.AppCompat.Spinner.Underlined"></style>

    <!-- Progress Bar Styles -->
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar"></style>

    <style name="ProgressBarStyle.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal"></style>

    <!-- Slider Styles -->
    <style name="SeekbarStyle" parent="Widget.AppCompat.SeekBar"></style>

    <!-- Image Styles -->
    <style name="ImageStyle"></style>

    <style name="ImageStyle.Colored">
        <item name="android:tint">?colorAccent</item>
    </style>

    <!-- Card Styles -->
    <style name="CardStyle" parent="CardView.Light">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="CardStyle.Home">
        <item name="contentPaddingBottom">@dimen/content_spacing_vertical</item>
        <item name="contentPaddingLeft">@dimen/content_spacing_horizontal</item>
        <item name="contentPaddingRight">@dimen/content_spacing_horizontal</item>
        <item name="contentPaddingTop">@dimen/content_spacing_vertical</item>
        <item name="android:layout_marginBottom">@dimen/view_spacing_small</item>
        <item name="android:layout_marginLeft">@dimen/screen_spacing_horizontal</item>
        <item name="android:layout_marginRight">@dimen/screen_spacing_horizontal</item>
        <item name="android:layout_marginTop">@dimen/view_spacing_small</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.Blue.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Blue.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
